# .env
# ──────────────────────────────────────────────
# CORE ENVIRONMENT
# ──────────────────────────────────────────────
TZ=Asia/Kolkata            # Align with your locale
VERSION=1.21.5             # Minecraft server version
TYPE=PURPUR                # Performance + plugin support
EULA=TRUE                  # Must be TRUE to run

# ──────────────────────────────────────────────
# NETWORK & OPERATIONS
# ──────────────────────────────────────────────
ONLINE_MODE=FALSE          # LAN/dev mode
SNOOPER_ENABLED=FALSE      # Disable Mojang telemetry

# ──────────────────────────────────────────────
# PERFORMANCE
# ──────────────────────────────────────────────
MAX_MEMORY=1G              # Don’t starve your laptop
VIEW_DISTANCE=8            # Chunk render distance
MAX_PLAYERS=10             # LAN-friendly cap

# ──────────────────────────────────────────────
# GAMEPLAY SETTINGS
# ──────────────────────────────────────────────
ALLOW_CHEATS=TRUE
ENABLE_COMMAND_BLOCK=TRUE
ALLOW_NETHER=TRUE
DIFFICULTY=normal
MODE=survival

# ──────────────────────────────────────────────
# IDENTITY & BRANDING
# ──────────────────────────────────────────────
SERVER_NAME=LocalCraft
MOTD=§aWelcome to Chinmay’s LAN Server!

